<div class="container text-center mt-3">
      <h1>Products</h1>
</div>

<div class="container text-right mt-3">
  <%# PLACEHOLDER ** TBD ** %>
  <p>sort by</p>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-3">
      <div class="filter-bar bg-info p-5 mt-3">
        <%= render 'shared/filter_form' %>
      </div>
    </div>
    <div class="col-lg-9">
      <div class="row">
        <% if @products.length.zero?  %>
          <div class="col-lg-12">
            <h5>Sorry there are no results that match your search criteria. Please try again</h5>
          </div>
        <% else %>
          <% @products.each do |product| %>
            <div class="col-lg-4 grow col-md-6">
              <%= link_to product_path(product) do %>
                <div class="card-product rounded mt-3">
                  <%# add cloudinary 1st image %>
                  <div class="img-wrapper">
                    <%= cl_image_tag product.photos[0].key, height: 300, width: 200, crop: :fill %>
                    <%# <img src="https://source.unsplash.com/VlMMBxSZuSI/200x300" /> %>
                  </div>
                  <div class="card-product-infos">
                    <div>
                      <h2 class=""><%= product.name.upcase %></h2>
                      <p><%= product.category.upcase %></p>
                    </div>
                    <h2 class="card-product-pricing">Â£99.99</h2>
                    <i class="far fa-heart card-product-save"></i>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
