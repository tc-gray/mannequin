<div class="container product-container pt-5">
  <div class="row">
    <div class="col-md-8 product-image-container">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% @product.photos.each_with_index do |photo, index| %>
          <% if index == 0 %>
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <% else %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>"></li>
          <% end %>
          <% end %>
        </ol>
        <div class="carousel-inner" style=" width:100%; height: 500px !important; object-fit:cover;">
          <% if @product.photos.attached? %>
          <% @product.photos.each_with_index do |photo, index| %>
          <% if index == 0 %>
          <div class="carousel-item active carousel-img">
            <%= cl_image_tag photo.key, style: 'width: 100%;' %>
          </div>
          <% else %>
          <div class="carousel-item carousel-img">
            <%= cl_image_tag photo.key, style: 'width: 100%;' %>
          </div>
          <% end %>
          <% end %>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-md-4 details-container">
      <div class="product-details-container">
        <div class="product-details">
          <h2><%= @product.name %></h2>
          <img class="card-trip-user avatar-bordered" src="https://source.unsplash.com/1DjbGRDh7-E/1600x900" />
        </div>
        <p><%= @product.description %></p>
        <hr class="horizontal-rule">
        <p>Category: <%= @product.category %></p>
        <p>Size: <%= @product.size %></p>
      </div>
      <div class="btn-container">
        <button class="btn btn-primary btn-book">BOOK NOW</button>
      </div>
    </div>
  </div>
</div>

<div class="more-from-this-user">
  <h2>More from this user</h2>
</div>

<div class="other-products">
  <div class="container">
    <div class="row other-products-container">
      <div class="col-md-3 product-image">
        <img src="https://source.unsplash.com/1DjbGRDh7-E/1600x900" style="width: 100%;" class="d=block w-100" />
      </div>
      <div class="col-md-3 product-image">
        <img src="https://source.unsplash.com/1DjbGRDh7-E/1600x900" style="width: 100%;" class="d=block w-100" />
      </div>
      <div class="col-md-3 product-image">
        <img src="https://source.unsplash.com/1DjbGRDh7-E/1600x900" style="width: 100%;" class="d=block w-100" />
      </div>
    </div>
  </div>
</div>

<div class="container review-form-container">
  <div class="row">
    <div class="col-md-6">
      <h2>Add a new product review</h2>
      <%= simple_form_for [@product, @product_review] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <% if @product_review.errors.any? %>
      <div class="errors-container">
        <ul class="list-unstyled">
          <% @product_review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <%= f.input :content, required: true %>
      <%= f.input :rating, collection: 0..5, required: true %>
      <%= f.button :submit, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container reviews-container">
  <div class="row">
    <div class="col-md-6">
    <h2>See this product's reviews</h2>
      <% if @product.product_reviews.empty? %>
        <small><em>Be the first one to review this product!</em></small>
      <% end %>
      <% @product.product_reviews[1..5].each do |review| %>
        <div>
          <% review.rating.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
          <p class="mb-0"><%= review.content %></p>
        </div>
        <% end %>
    </div>
  </div>
</div>
