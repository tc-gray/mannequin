<div class="container product-container pt-5">
  <div class="row">
    <div class="col-md-8 product-image-container">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% @product.photos.each_with_index do |photo, index| %>
          <% if index == 0 %>
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <% else %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>"></li>
          <% end %>
          <% end %>
        </ol>
        <div class="carousel-inner" style=" width:100%; height: 500px !important; object-fit:cover;">
          <% if @product.photos.attached? %>
          <% @product.photos.each_with_index do |photo, index| %>
          <% if index == 0 %>
          <div class="carousel-item active carousel-img">
            <%= cl_image_tag photo.key, style: 'width: 100%;' %>
          </div>
          <% else %>
          <div class="carousel-item carousel-img">
            <%= cl_image_tag photo.key, style: 'width: 100%;' %>
          </div>
          <% end %>
          <% end %>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-md-4 details-container">
      <div class="product-details-container">
        <div class="product-details">
          <h2><%= @product.name %></h2>
          <img class="card-trip-user avatar-bordered" src="https://source.unsplash.com/1DjbGRDh7-E/1600x900" />
        </div>
        <p><%= @product.description %></p>
        <hr class="horizontal-rule">
        <p>Category: <%= @product.category %></p>
        <p>Size: <%= @product.size %></p>
      </div>
      <div class="btn-container">
        <button class="btn btn-primary btn-book">BOOK NOW</button>
      </div>
    </div>
  </div>
</div>

<div class="more-from-this-user">
  <h2>More from this user</h2>
</div>

<div class="other-products">
  <div class="container">
    <div class="row other-products-container">
